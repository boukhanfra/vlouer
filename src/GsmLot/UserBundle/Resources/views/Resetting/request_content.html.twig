{% trans_default_domain 'FOSUserBundle' %}

<div class="container" style="padding:30px">
         <div class="row">
            <div class="col-xs-6">
 {% image '@GsmLotIndexBundle/Resources/public/images/register.jpg' %}
    <img src="{{ asset_url }}" alt="gsmlot phones exchange" class="img-responsive" />
{% endimage %} 
            </div>
            
            <div class="col-xs-5" style="text-align: justify">
            <h3>{{ 'security.reset.title'|trans }}</h3>
      <blockquote>
<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <div>
        {% if invalid_username is defined %}
            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
        {% endif %}
        <div class="form-group">
        <label for="username">{{ 'resetting.request.username'|trans }}</label>
        <input type="text" id="username" class="form-control" name="username" required="required" />
        </div>
    </div>
    <div>
        <input type="submit"  class="btn btn-primary" id="_submit" name="_submit" value="{{ 'resetting.request.submit'|trans }}" />
    </div>
</form>
     </blockquote>
     		</div>
     	</div>
    </div>
    