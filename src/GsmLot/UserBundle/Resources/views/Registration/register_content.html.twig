{% trans_default_domain 'FOSUserBundle' %}


  <div class="container" style="padding:30px">
         <div class="row">
            <div class="col-lg-6">
 {% image '@GsmLotIndexBundle/Resources/public/images/login.jpg' %}
    <img src="{{ asset_url }}" alt="gsmlot phones exchange" style="width:500px;" />
{% endimage %} 
            </div>
            
            <div class="col-lg-4" style="text-align: justify">
            <h2>Register here</h2>
    <blockquote>
<form action="{{ path('fos_user_registration_register') }}"
 {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">

<div class="form-group" >
			<label for="control-label" class="inputDefault">Email</label>
			{{ form_widget(form.email,{ 'attr' :{ 'class' : 'form-control'} }) }}
</div>
<div class="form-group" >
			<label for="control-label" class="inputDefault">Username</label>
			{{ form_widget(form.username,{ 'attr' :{ 'class' : 'form-control'} }) }}
</div>
<div class="form-group" >
			{{ form_widget(form.plainPassword) }}
</div>

    
    <div>
        <input type="submit" class="btn btn-primary" value="{{ 'registration.submit'|trans }}" />
    </div>
</form>
     </blockquote>
     		</div>
     	</div>
    </div>