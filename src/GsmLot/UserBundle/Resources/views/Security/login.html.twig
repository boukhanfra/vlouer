{% extends 'GsmLotIndexBundle:Index:base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block contenu %}
{% if error %}
          <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
     <div class="container" style="padding:10px">
         <div class="row">        
            <div class="col-xs-5" style="font-size:17px;">
   <h2>Log in to your space</h2>
<form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <div class="form-group">
	    <label for="username" class="col-lg-6 control-label">{{ 'security.login.username'|trans }}</label>
	   <div class="col-lg-5">
	    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
		</div>
	</div>
	<div class="form-group">
	    <label for="password" class="col-lg-6 control-label">{{ 'security.login.password'|trans }}</label>
    	 <div class="col-lg-5">
    	<input type="password" id="password" name="_password" required="required" />
    	 </div>
	</div>
	<div class="form-group">
		<label for="remember_me" class="col-lg-6 control-label">{{ 'security.login.remember_me'|trans }}</label>
		  <div class="col-lg-5">
		<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
		  </div>
	</div>
   <center> 
   <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" /></center>
</form>

<a href="{{ path('fos_user_resetting_request') }}" > Forgot Password ?</a>
	
            </div>
            
           <div class="col-xs-7">
            <blockquote>
      		    <div class="jumbotron">
  <h2>You don't have an account ? </h2>
  <p>Become an active memeber on the International Wholesale Market. 
Gain Global recognition as a verified and reputable trader.</p>
  <p><a class="btn btn-primary btn-lg" href="{{ path("fos_user_registration_register") }}">{{ 'layout.register'|trans }}</a></p>
				</div>
		    </blockquote>
            </div>        
       </div>
    </div>
     
{% endblock %}