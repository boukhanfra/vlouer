{% extends "::base.html.twig" %}


{% trans_default_domain 'FOSUserBundle' %}

{% block contenu %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
     <div class="container" style="padding:30px">
         <div class="row">
            <div class="col-lg-6">
 {% image '@GsmLotIndexBundle/Resources/public/images/login.jpg' %}
    <img src="{{ asset_url }}" alt="gsmlot phones exchange" style="width:500px;" />
{% endimage %} 
            </div>
            
            <div class="col-lg-6" style="text-align: justify">
    <blockquote>

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
	<div class="row">
	    <label for="username">{{ 'security.login.username'|trans }}</label>
	    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
	</div>
	<div class="row">
	    <label for="password">{{ 'security.login.password'|trans }}</label>
    	<input type="password" id="password" name="_password" required="required" />
	</div>
	<div class="row">
		<label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
		<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
	</div>
    <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>
	</blockquote>
        
            </div>
     
     </div>
     
     </div>
     
{% endblock %}