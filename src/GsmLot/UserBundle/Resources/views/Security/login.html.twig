{% extends 'GsmLotIndexBundle:Index:base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block contenu %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container" style="padding:10px">
        <div class="row">
            <div class="col-md-5" style="font-size:17px;">
                <h2> {{ 'security.login.title'|trans }} </h2>

                <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                    <div class="form-group">
                        <label for="username"
                               class="col-md-6 control-label">{{ 'security.login.username'|trans }}</label>

                        <div class="col-md-5">
                            <input type="text" id="username" name="_username" value="{{ last_username }}"
                                   required="required"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password"
                               class="col-md-6 control-label">{{ 'security.login.password'|trans }}</label>

                        <div class="col-md-5">
                            <input type="password" id="password" name="_password" required="required"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="remember_me"
                               class="col-md-6 control-label">{{ 'security.login.remember_me'|trans }}</label>

                        <div class="col-md-5">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                        </div>
                    </div>
                    <div class="text-center">
                        <input type="submit" class="btn btn-primary" id="_submit" name="_submit"
                               value="{{ 'security.login.submit'|trans }}"/>
                    </div>
                </form>

                <a href="{{ path('fos_user_resetting_request') }}"> {{ 'security.login.passwordlink'|trans }}</a>

            </div>

            <div class="col-md-7">
                <blockquote>
                    <div class="jumbotron">
                        <h2>{{ 'security.login.jumbotron.header'|trans }} </h2>

                        <p>{{ 'security.login.jumbotron.texte'|trans }}</p>

                        <p><a class="btn btn-primary btn-md"
                              href="{{ path("fos_user_registration_register") }}">{{ 'layout.register'|trans }}</a></p>
                    </div>
                </blockquote>
            </div>
        </div>
    </div>

{% endblock %}