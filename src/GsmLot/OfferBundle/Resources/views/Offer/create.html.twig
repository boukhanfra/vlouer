{% extends '::base.html.twig' %}
{% block contenu %}
<h3>{{ 'offer.new.title'|trans }}</h3>
<form method="post" action="{{ path('offer_create') }}">
	<div class="form-group">
		<div class="row">
			<label for="offerType" class="col-md-1">{{ 'offer.new.offerType'|trans }}</label>
			{{ form_widget(form.offerType,{ 'attr' :{ 'class' : 'col-md-2'} }) }}
			<label for="device" class="col-md-1">{{ 'offer.new.brand'|trans }}</label>
			{{ form_widget(form.brand,{ 'attr' :{ 'class' : 'col-md-2'} }) }}
		</div>
	</div>
	<div class="form-group">
		
	</div>
	<div class="form-group">
		<div class="row">
			<label for="device" class="col-md-3">{{ 'offer.new.device'|trans }}</label>
			{{ form_widget(form.device,{ 'attr' :{ 'class' : 'col-md-3'} }) }}
		</div>
	</div>
	<div class="form-group">
		<div class="row">
			<label for="device" class="col-md-3">{{ 'offer.new.norm'|trans }}</label>
			{{ form_widget(form.norm,{ 'attr' :{ 'class' : 'col-md-3'} }) }}
		</div>
	</div>
	<div class="form-group">
		<div class="row">
			<label for="device" class="col-md-3">{{ 'offer.new.device'|trans }}</label>
			{{ form_widget(form.model,{ 'attr' :{ 'class' : 'col-md-3'} }) }}
		</div>
	</div>
	<div class="form-group">
		<div class="row">
			<label for="device" class="col-md-3">{{ 'offer.new.device'|trans }}</label>
			{{ form_widget(form.deviceType,{ 'attr' :{ 'class' : 'col-md-3'} }) }}
		</div>
	</div>
	<div class="form-group">
		<div class="row">
			<label for="quantity" class="col-md-3">{{ 'offer.new.quantity'|trans }}</label>
			{{ form_widget(form.qte,{ 'attr' :{ 'class' : 'col-md-3'} }) }}
		</div>
	</div>
	<div class="form-group">
		<div class="row">
			<label for="price" class="col-md-3">{{ 'offer.new.price'|trans }}</label>
			{{ form_widget(form.price,{ 'attr' :{ 'class' : 'col-md-3'} }) }}
		</div>
	</div>
	<div class="form-group">
		<div class="row">
			<label for="description" class="col-md-3">{{ 'offer.new.description'|trans }}</label>
			{{ form_widget(form.description,{ 'attr' :{ 'class' : 'col-md-3'} }) }}
		</div>
	</div>
	<div class="form-group">
		<div class="row">
			<label for="Physical Stock" class="col-md-3">{{ 'offer.new.physicalStock'|trans }}</label>
			{{ form_widget(form.physicalStock,{ 'attr' :{ 'class' : 'col-md-3'} }) }}
		</div>
	</div>
	{{ form_row(form._token) }}
	 <button type="submit" class="btn btn-primary">{{ 'offer.new.submit'|trans }}</button>
</form>
{% endblock %}