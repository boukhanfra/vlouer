<div class="container" style="padding-bottom:50px">
    <div class="row">
        <div class="col-lg-6">
            <h2> {{ 'index.titre.sellphones'|trans }}</h2>
            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th>{{ 'index.top_5_phones_sell'|trans }}</th>
                    <th>{{ 'index.quantity'|trans }}</th>
                    <th>{{ 'index.average'|trans }}</th>
                    <th>{{ 'index.sellers'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for offer in list_offer_sell %}
                <tr>
                    <td>{{ offer.brand }} {{ offer.model }}</td>
                    <td>{{ offer.quantity }}</td>
                    <td>{{ offer.price|number_format(2) }} {{ offer.currency }}</td>
                    <td><span class="badge">{{ offer.sellers }}</span></td>
                </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="text-center">
                <button type="button" onclick="location.href='{{ path("fos_user_registration_register") }}'"
                        class="btn btn-success">
                {{ 'index.boutton.registersell'|trans }}
                </button>
            </div>
        </div>

        <div class="col-lg-6">
            <h2>{{ 'index.titre.buyphones'|trans }}</h2>
            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th>{{ 'index.top_5_phones_buyers'|trans }}</th>
                    <th>{{ 'index.quantity'|trans }}</th>
                    <th>{{ 'index.average'|trans }}</th>
                    <th>{{ 'index.buyers'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for offer in list_offer_buy %}
                <tr>
                    <td>{{ offer.brand }} {{ offer.model }}</td>
                    <td>{{ offer.quantity }}</td>
                    <td>{{ offer.price|number_format(2) }} {{ offer.currency }}</td>
                    <td><span class="badge">{{ offer.sellers }}</span></td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="text-center">
                <button type="button" onclick="location.href='{{ path("fos_user_registration_register") }}'" class="btn btn-warning">
                    {{ 'index.boutton.registerbuy'|trans }}
                </button>
            </div>
        </div>
    </div>
</div>