{{ form_start(form) }}
<div class="form-group" >
			<label for="control-label" class="inputDefault">Nombre de pila</label>
			{{ form_widget(form.firstName,{ 'attr' :{ 'class' : 'form-control'} }) }}
</div>

<div class="form-group" >
			<label for="control-label" class="inputDefault">Apellido</label>
			{{ form_widget(form.lastName,{ 'attr' :{ 'class' : 'form-control'} }) }}
</div>
<div class="form-group" >
			<label for="control-label" class="inputDefault">Correo electrónico</label>
			{{ form_widget(form.email,{ 'attr' :{ 'class' : 'form-control'} }) }}
</div>
<div class="form-group" >
			<label for="control-label" class="inputDefault">Sujeto</label>
			{{ form_widget(form.objectMail,{ 'attr' :{ 'class' : 'form-control'} }) }}
</div>

<div class="form-group">
      <label for="textArea" class="inputDefault">Mensaje</label>

{{ form_widget(form.messageMail,{ 'attr' :{ 'rows' : '4'} }) }}    
 </div>
 {{ form_row(form._token) }}
